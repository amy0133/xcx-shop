/**index.wxss**/
.container{padding: 60rpx 0;}
.head-tab{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 60rpx;
  z-index: 10;
  display: flex;
  align-content: center;
  justify-content: center;
  background-color: #ffffff;
}

.head-tab .tab-item{
  flex: 1;
  color: #222222;
  font-size: 18px;
  text-align: center;
}

.head-tab .tab-item.selected{
  color: #B92D17;
}

.head-tab .tab-item.selected .tab-text{
  border-bottom: 2px solid #B92D17;
}

.tab-cnt{
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-flow: row wrap;
  flex-wrap: wrap;
  padding: 10px 10px 10px 0;
  box-sizing: border-box;
}

.tab-cnt .tab-item{
  height: 100px;
  text-align: center;
  margin-left: 8px;
}

.tab-cnt .tab-item .tab-image{
  width: 64px;
  height: 64px;
  border-radius: 64px;
}

.tab-cnt .tab-item .tab-text{
  color: #666666;
  font-size: 12px;
  text-align: center;
  width: 100%;
  display: block;
}