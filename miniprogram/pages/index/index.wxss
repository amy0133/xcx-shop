/**index.wxss**/
.head-tab{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 60rpx;
  z-index: 10;
  display: flex;
  align-content: center;
  justify-content: center;
}

.head-tab .tab-item{
  flex: 1;
  color: #222222;
  font-size: 18px;
  text-align: center;
}

.head-tab .tab-item.selected{
  color: #B92D17;
}

.head-tab .tab-item.selected .tab-text{
  border-bottom: 1px solid #B92D17;
}